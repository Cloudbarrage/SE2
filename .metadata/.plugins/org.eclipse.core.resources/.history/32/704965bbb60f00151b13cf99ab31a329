package modell;

import java.util.ArrayList;
import java.util.List;
import java.util.Observable;
import java.util.Observer;

public class BeobachterDrei
{

    private int _beobachter = 0;

    private int[] _counter = new int[0];
    private List<Observer> _observer = new ArrayList<Observer>();

    public void registriereBeobachter(BeobachtbarDrei beobachtbar)
    {
        ++_beobachter;
        if (_beobachter >= _counter.length)
        {
            int[] temp = _counter;
            _counter = new int[_counter.length * 2 + 1];
            System.arraycopy(temp, 0, _counter, 0, temp.length);
        }
        beobachtbar.addObserver(new Observer()
        {
            private final int id = _beobachter;
            private int i = 0;

            public void count()
            {
                ++i;
            }

            public int getValue()
            {
                return i;
            }

            public void update(Observable o, Object arg)
            {
                count();
            }
        });
    }

    public int getNumber(Observable o)
    {
        _observer;
    }
}
