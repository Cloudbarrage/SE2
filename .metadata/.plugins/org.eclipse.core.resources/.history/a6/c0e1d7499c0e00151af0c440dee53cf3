import java.util.Observable;

public class Beobachtbar extends Observable {
	private int _n;

	public Beobachtbar() {
		_n = 1;
	}

	public int getNumber() {
		return _n;
	}
	
	public void silentSetNumber(int n) {
		_n = n;
	}

	public void setNumber(int i) {
		_n = i;
		setChanged();
		notifyObservers();
	}
}
