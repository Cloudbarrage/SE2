package modell;

import java.util.Observable;

public class BeobachtbarZwei extends Observable
{
    private static int UNIQUE_ID = 0;
    public final int id = ++UNIQUE_ID;
    private int _n = 0;

    public int getNumber()
    {
        return _n;
    }

    public void increment()
    {
        ++_n;
        setChanged();
        notifyObservers(id);
    }

    public int getID()
    {
        return id;
    }

}
